<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ecozy_main">

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/neumorphCardView"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:neumorph_shadowColorDark="@color/dark_shadow"
        app:neumorph_shadowColorLight="@color/light_shadow"
        app:neumorph_shadowElevation="6dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/last_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="@color/accent"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="39dp"
                android:text=""
                android:textColor="@color/accent"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/time"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text=""
                android:textColor="@color/accent"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text=""
                android:textColor="@color/accent"
                android:textSize="24sp" />


        </RelativeLayout>

    </soup.neumorphism.NeumorphCardView>

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:neomorph_background_color="@color/ecozy_main"
        app:neomorph_elevation="6dp"
        app:neomorph_highlight_color="@color/light_shadow"
        app:neomorph_shadow_color="@color/dark_shadow"
        app:neomorph_shadow_type="inner"

        app:neomorph_view_type="circular">

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:layout_width="325dp"
            android:layout_height="325dp"
            android:layout_gravity="center"
            app:neomorph_background_color="@color/ecozy_main"
            app:neomorph_elevation="6dp"
            app:neomorph_highlight_color="@color/light_shadow"
            app:neomorph_shadow_color="@color/dark_shadow"
            app:neomorph_shadow_type="outer"
            app:neomorph_view_type="circular"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/loading"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="307dp"
            android:layout_height="307dp"
            android:src="@drawable/loading" />

        <ImageView
            android:id="@+id/pulse"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="310dp"
            android:layout_height="310dp"
            android:src="@drawable/pulse" />

        <ImageView
            android:id="@+id/ellipse"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="302dp"
            android:layout_height="302dp"
            android:src="@drawable/ellipse" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginStart="88dp"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="88dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/accent"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/nameDevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginStart="93dp"
                android:layout_marginEnd="93dp"
                android:layout_marginBottom="118dp"
                android:text=""
                android:textColor="@color/ecozy_text"
                android:textSize="18sp"
                android:gravity="center"
                />

        </RelativeLayout>




    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>