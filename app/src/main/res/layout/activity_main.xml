<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/ecozy_main">

    <ImageView
        android:id="@+id/bgHome"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/concave_button"
        android:padding="12dp"
        android:elevation="-10dp"/>

    <soup.neumorphism.NeumorphImageButton
        android:id="@+id/bHome"

        style="@style/Widget.Neumorph.ImageButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"

        android:layout_marginBottom="20dp"
        android:padding="30dp"
        android:scaleType="fitCenter"

        android:src="@drawable/home_orange"
        app:neumorph_inset="12dp"
        app:neumorph_shadowColorDark="@color/dark_shadow"
        app:neumorph_shadowColorLight="@color/light_shadow"
        app:neumorph_shadowElevation="6dp"
        />

    <ImageView
        android:id="@+id/bgSearch"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/convex_button"
        android:padding="12dp"
        android:elevation="-10dp"/>

    <soup.neumorphism.NeumorphImageButton
        android:id="@+id/bSearch"

        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"

        android:src="@drawable/search_accent"
        android:scaleType="fitCenter"
        android:padding="30dp"

        style="@style/Widget.Neumorph.ImageButton"
        app:neumorph_shadowColorDark="@color/dark_shadow"
        app:neumorph_shadowColorLight="@color/light_shadow"
        />

    <LinearLayout
        android:id="@+id/lLogo"

        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"

        android:orientation="horizontal"
        android:gravity="center"
        >

        <soup.neumorphism.NeumorphImageView
            android:id="@+id/logs"

            android:layout_width="80dp"
            android:layout_height="80dp"

            android:src="@drawable/ecozy_logo"
            android:scaleType="fitCenter"
            android:padding="25dp"
            app:neumorph_shapeAppearance="@style/ShapeAppearance"
            style="@style/Widget.Neumorph.ImageView"
            app:neumorph_shadowColorDark="@color/dark_shadow"
            app:neumorph_shadowColorLight="@color/light_shadow"
            app:neumorph_shadowElevation="6dp"
            />

        <soup.neumorphism.NeumorphCardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:layout_marginEnd="30dp"

            style="@style/Widget.Neumorph.CardView"
            app:neumorph_shapeType="flat"
            app:neumorph_shadowColorDark="@color/dark_shadow"
            app:neumorph_shadowColorLight="@color/light_shadow"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="@string/eCozy"
                android:textColor="@color/accent"
                android:textSize="@dimen/textFontSize"
                android:gravity="center"
                android:padding="10dp"
                />

        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/cvConnectionStatus"

            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_marginEnd="10dp"

            app:neumorph_shadowColorDark="@color/dark_shadow"
            app:neumorph_shadowColorLight="@color/light_shadow"
            app:neumorph_shadowElevation="4dp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/containerFragment"

        android:layout_width="wrap_content"
        android:layout_height="178dp"

        android:layout_above="@+id/bHome"
        android:layout_below="@+id/lLogo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp" >

    </FrameLayout>

</RelativeLayout>
